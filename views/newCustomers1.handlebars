        }
        .right {
            text-align: right !important;
        }
        .smallParagraph {
            width: 70%;
            margin: auto;
        }
        .green-pill {
            background-color: #6ADDBC;
            color: white;
            border-radius: 20px;
            width: fit-content;
            padding: 1px 20px;
            height: 20px;
            display: block;
            margin: auto;
            line-height: 20px;
        }
        .black-pill {
            background-color: black;
            color: white;
            border-radius: 20px;
            width: fit-content;
            padding: 1px 20px;
            height: 20px;
            display: block;
            margin: auto;
            line-height: 20px;
        }
    
        p {
            margin: 10px 0;
            font-size: 15px;
            font-weight: 600;
        }

        a {
            font-size: 15px;
            text-decoration: none;
        }

        .button {
            background-color: #6ADDBC;
            color: white !important;
            margin: 10px auto;
            margin-bottom: 50px;
            width: 30%;
            min-width: 250px;
            max-width: 400px;
            height: 45px;
            font-weight: bold;
            text-align: center;
            line-height: 45px;
            border-radius: 20px;
        }

        .logo {
            display: block;
            margin: auto;
            width: 150px;
        }
        hr {
            background-color: lightgray;
            max-width: 80%;
            min-width: 250px;
        }
        h2 {
            font-size: 40px;
            color: #1f2533;
            text-align: center;
        }
        ul {
            margin: 20px 0;
            margin-left: -20px;
        }
        li {
            margin-bottom: 10px;
        }
    
        .socialMedia {
            box-sizing: border-box;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            gap: 10px;
            width: 110px;
            margin: 30px auto 0 auto;
        }
        .socialMedia img {
            width: 50px;
            display: block;
            
        }


        .footer {
            background-color: black;
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding: 40px 20px;
            text-align: right;
        }
        .footer img {
            display:block;
            width: 10%;
            margin: auto auto auto 0;
        }
        .footer p {
            color: white;
            text-align: left;
            width: 60%;
            font-size: 12px;
            font-weight: 400;
        }
        .footer a {
            text-align: right;
            color: white;
            display: block;
        }

        .footer-mobile {
            background-color: black;
            display: none;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding: 40px 20px;
            text-align: right;
        }
        .footer-mobile img {
            display:block;
            width: 30%;
            margin: 30px auto;
        }
        .footer-mobile p {
            text-align: center;
            color: white;
            margin-bottom: 20px;
        }

        .footer-mobile a {
            text-align: center;
            color: white;
            display: block;
            margin: 10px;
        }



        @media screen and (max-width:700px) {
            h2 {
                line-height: 45px;
            }
            .other-services {
               display: none;
            }
            .other-services-mobile {
               display: block;
            }
            .footer {
                display: none;
            }
            .footer-mobile {
                display: block;
            }

            .grid-3col {
                display: block;
            }
            .grid-3col p{
                margin-bottom: 20px;
            }

            #shores, #wood {
                display: none;
            }
            .gray-bg, .white-bg {
                padding:20px 30px;
            }

        }

    </style>
</head>
